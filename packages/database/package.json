{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "@packages/database",
	"version": "0.1.0",
	"engines": {
		"node": ">=20"
	},
	"files": [
		"/lib"
	],
	"exports": {
		"./*": {
			"types": "./lib/*.d.ts",
			"import": "./lib/*.js"
		}
	},
	"scripts": {
		"build": "tsc --project \"./tsconfig.build.json\" ",
		"clean": "pnpm run \"/^clean:.*/\" ",
		"clean:build": "del \"./lib\" ",
		"clean:cache": "del \"./node_modules/.cache\" ",
		"clean:container": "pnpm run stop:container && docker compose --env-file \"../../.env\" --file \"./docker-compose.yml\" rm --force --volumes",
		"clean:test": "del \"./coverage\" ",
		"dev": "pnpm run \"/^dev:.*/\" ",
		"dev:build": "pnpm build --watch",
		"dev:doc": "typedoc --watch",
		"dev:test": "pnpm vitest watch --dir \"./src\" --passWithNoTests --typecheck --ui",
		"fix": "pnpm run \"/^fix:.*/\" ",
		"fix:format": "biome format . --verbose --write",
		"fix:js": "biome lint . --verbose --apply-unsafe",
		"fix:md": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\" --fix",
		"fix:typos": "typos --verbose --write-changes",
		"lint": "pnpm run \"/^lint:.*/\" ",
		"lint:format": "biome format . --verbose",
		"lint:js": "biome lint . --verbose",
		"lint:md": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\" ",
		"lint:ts": "tsc --noEmit",
		"lint:typos": "typos --verbose",
		"seed": "tsx \"./scripts/seed.ts\" ",
		"stop:container": "docker compose --env-file \"../../.env\" --file \"./docker-compose.yml\" stop",
		"test": "vitest run --dir \"./src\" --passWithNoTests --typecheck",
		"up:container": "docker compose --env-file \"../../.env\" --file \"./docker-compose.yml\" up --detach --build"
	},
	"devDependencies": {
		"@packages/config": "workspace:^",
		"@packages/logger": "workspace:^",
		"@packages/util": "workspace:^",
		"drizzle-orm": "^0.29.3",
		"postgres": "^3.4.3"
	}
}
