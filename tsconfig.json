{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@terminal-nerds/typescript-config/es-module",
	"compilerOptions": {
		"allowJs": true,
		"allowImportingTsExtensions": false,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"moduleResolution": "Bundler",
		"noEmit": false,
		"sourceMap": false,
		"tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
	},
	"exclude": ["**/node_modules/"],
	"include": [".storybook/*.ts", "types/*.d.ts", "*.js", "*.json", "*.ts"],
	"references": [
		{
			"path": "libs/config",
		},
		{
			"path": "libs/core",
		},
		{
			"path": "libs/database",
		},
		{
			"path": "libs/i18n",
		},
		{
			"path": "libs/logger",
		},
		{
			"path": "libs/path",
		},
		{
			"path": "libs/token",
		},
		{
			"path": "libs/ui",
		},
		{
			"path": "libs/unit",
		},
		{
			"path": "libs/util",
		},
	],
}
