{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "@packages/logger",
	"version": "0.1.0",
	"engines": {
		"node": ">=20"
	},
	"files": [
		"/lib"
	],
	"exports": {
		".": {
			"types": "./lib/main.d.ts",
			"import": "./lib/main.js"
		}
	},
	"scripts": {
		"build": "tsc --project \"./tsconfig.build.json\" ",
		"dev:build": "pnpm build --watch",
		"fix": "pnpm run \"/^fix:.*/\" ",
		"fix:format": "biome format . --verbose --write",
		"lint": "pnpm run \"/^lint:.*/\" ",
		"lint:format": "biome format . --verbose"
	}
}
