{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"name": "@packages/database",
	"version": "0.1.0",
	"engines": {
		"node": ">=20"
	},
	"files": [
		"/lib"
	],
	"exports": {
		".": {
			"types": "./lib/main.d.ts",
			"import": "./lib/main.js"
		}
	},
	"scripts": {
		"build": "tsc --project \"./tsconfig.build.json\" ",
		"clean:docker": "pnpm run stop && docker compose rm --force --volumes",
		"dev": "pnpm run \"/^dev:.*/\" ",
		"dev:build": "pnpm build --watch",
		"dev:doc": "typedoc --watch",
		"fix": "pnpm run \"/^fix:.*/\" ",
		"fix:format": "biome format . --verbose --write",
		"fix:typos": "typos --verbose --write-changes",
		"lint": "pnpm run \"/^lint:.*/\" ",
		"lint:format": "biome format . --verbose",
		"stop:docker": "docker compose stop",
		"up:docker": "docker compose up --detach --build"
	}
}
