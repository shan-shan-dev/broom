{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"type": "module",
	"homepage": "https://github.com/shan-shan-dev/shan-shan",
	"repository": "shan-shan-dev/shan-shan",
	"bugs": "https://github.com/shan-shan-dev/shan-shan/issues",
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"scripts": {
		"build": "turbo run build",
		"changelog": "pnpm changeset add",
		"clean": "pnpm run \"/^clean:.*/\"; del \"./**/node_modules\" ",
		"clean:cache": "del \"./node_modules/.cache\" \"./.turbo\" ",
		"clean:doc": "del \"./docs\" ",
		"clean:pkg": "pnpm run --recursive clean",
		"clean:test": "del \"./coverage\" ",
		"db:seed": "pnpm run --filter \"@packages/database\" \"seed\" ",
		"db:start": "pnpm run --filter \"@packages/database\" \"up:container\" ",
		"dev": "pnpm run --recursive \"dev\" ",
		"dev:build": "pnpm run --recursive \"dev:build\" ",
		"dev:doc": "pnpm run --recursive \"dev:doc\" ",
		"dev:test": "pnpm vitest watch --passWithNoTests --typecheck --ui",
		"doc": "typedoc",
		"edit:i18n": "pnpm run --filter \"@packages/i18n\" \"editor\" ",
		"fix": "pnpm run \"/^fix:.*/\" ",
		"fix:format": "biome format . --verbose --write",
		"fix:i18n": "pnpm run --filter \"@packages/i18n\" \"fix:i18n\" ",
		"fix:js": "biome lint . --verbose --apply-unsafe",
		"fix:md": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\" \"#./.github/TECHSTACK.md\" --fix",
		"fix:prettier": "prettier --cache --cache-location=\"./node_modules/.cache/prettier\" --log-level=log --plugin prettier-plugin-svelte \"./**/*.{astro,html,svelte}\" --write",
		"fix:typos": "typos --verbose --write-changes",
		"lint": "pnpm run \"/^lint:.*/\" ",
		"lint:format": "biome format . --verbose",
		"lint:i18n": "pnpm run --filter \"@packages/i18n\" \"lint:i18n\" ",
		"lint:js": "biome lint . --verbose",
		"lint:md": "markdownlint-cli2 \"**/*.md\" \"#**/node_modules\" \"#./.github/TECHSTACK.md\" ",
		"lint:prettier": "prettier --cache --cache-location=\"./node_modules/.cache/prettier\" --log-level=log --plugin prettier-plugin-svelte \"./**/*.{astro,html,svelte}\" --check",
		"lint:ts": "tsc --noEmit",
		"lint:typos": "typos --verbose",
		"prepare": "lefthook install",
		"setup:env": "pnpm run --filter \"@packages/config\" \"setup:env\" ",
		"test": "turbo run test"
	},
	"dependencies": {
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "3.0.2",
		"@terminal-nerds/typescript-config": "0.10.1",
		"@total-typescript/ts-reset": "0.5.1",
		"@types/node": "20.11.16",
		"tslib": "2.6.2",
		"turbo": "1.12.3",
		"type-fest": "4.10.2",
		"typescript": "5.3.3",
		"vite": "5.1.0"
	},
	"optionalDependencies": {
		"@biomejs/biome": "1.5.3",
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.1",
		"@size-limit/esbuild-why": "11.0.2",
		"@size-limit/preset-app": "11.0.2",
		"@terminal-nerds/markdownlint-config": "0.14.0",
		"@terminal-nerds/prettier-config": "0.19.0",
		"@vitest/coverage-v8": "1.2.2",
		"@vitest/ui": "1.2.2",
		"del-cli": "5.1.0",
		"lefthook": "1.6.1",
		"markdownlint-cli2": "0.12.1",
		"prettier": "3.2.5",
		"size-limit": "11.0.2",
		"size-limit-preset-node-lib": "0.3.0",
		"tsx": "4.7.0",
		"typedoc": "0.25.7",
		"typedoc-plugin-coverage": "3.1.0",
		"typedoc-plugin-mdn-links": "3.1.14",
		"typedoc-plugin-zod": "1.1.2",
		"vitest": "1.2.2"
	}
}
