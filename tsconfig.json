{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@terminal-nerds/typescript-config/es-module",
	"compilerOptions": {
		"allowJs": true,
		"allowImportingTsExtensions": false,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"moduleResolution": "Bundler",
		"noEmit": false,
		"sourceMap": false,
		"tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo",
	},
	"exclude": ["**/node_modules/"],
	"include": [".storybook/*.ts", "types/*.d.ts", "*.js", "*.json", "*.ts"],
	"references": [
		{
			"path": "packages/config",
		},
		{
			"path": "packages/core",
		},
		{
			"path": "packages/database",
		},
		{
			"path": "packages/i18n",
		},
		{
			"path": "packages/logger",
		},
		{
			"path": "packages/path",
		},
		{
			"path": "packages/token",
		},
		{
			"path": "packages/ui",
		},
		{
			"path": "packages/unit",
		},
		{
			"path": "packages/util",
		},
	],
}
